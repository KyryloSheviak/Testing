@model Testing.Domain.Entitys.Test
@{
    ViewBag.Title = "Вопросы к тесту";
}
<h2>Тест: @Model.Subject</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Сomplexity.Complication)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Сomplexity.Complication)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TimeToGo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimeToGo) (мин)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CountQuestions)
        </dt>
        <dd>
            <div id="results">
                @Html.DisplayFor(model => model.CountQuestions)
            </div>
        </dd>
    </dl>
</div>


<div class="row">
    <div class="col-md-6">
        @using (Ajax.BeginForm("AddQuestion", new AjaxOptions { UpdateTargetId = "results", OnSuccess = "OnSuccess" }))
        {
            <div class="QuestionBlock">
                <label>Вопрос</label>
                <input type="text" name="name" class="form-control text-box single-line" required />
                <hr />
            </div>
            <div id="answersBlock">
                <div class="answerItem">
                    <h5>Ответ № 1</h5>
                    <div>
                        <input type="text" name="answers" id="answers" class="form-control text-box single-line" required />
                        <input type="checkbox" onClick="document.getElementById('ans_1').value = this.checked ? 1 : 0;"> Правильный?
                        <input type="hidden" name="ans" id="ans_1" value="0">
                    </div>
                </div>
            </div>
            <br />
            <input id="test" type="submit" value="Добавить вопрос" class="btn btn-primary" />
            <input type="text" name="idtest" value="@Model.Id" hidden />
        }
    </div>
    <div class="col-md-2">
        <button id="addLink" class="btn btn-success">Добавить ответ</button>
    </div>
</div>

<br />
<p>
    @Html.ActionLink("Назад к тестам", "Tests")
</p>

@Scripts.Render("~/scripts/jquery-3.3.1.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
@Scripts.Render("~/scripts/script.js")

@section Scripts {
    <script>

    </script>
}
