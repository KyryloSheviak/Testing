@model IEnumerable<Testing.Domain.Entitys.Test>

@{
    ViewBag.Title = "Доступные тесты";
}

<h2>Доступные тесты</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Сomplexity.Complication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeToGo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountQuestions)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Сomplexity.Complication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeToGo) (мин)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountQuestions)
            </td>
            <td>
                @Html.ActionLink("Пройти тест", "Start", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>
